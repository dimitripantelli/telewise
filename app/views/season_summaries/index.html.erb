<div class='container text-white d-flex justify-content-between'>
  <h1><strong><%= @show.name %></strong>, <%= @season %></h1>
  <p><%= link_to 'Back', show_path(@show), class: "btn btn-success" %></p>
</div>

<div class="progress">
  <div
    class="progress-bar"
    role="progress-bar"
    aria-valuenow="70"
    aria-valuemin="0"
    aria-valuemax="100"
    style="width: 30%"
  ></div>
</div>


<div class="episode_summary">
  <% @show.episodes.where(season_number: @season).each do |episode| %>
    <div class="container rounded p-3 mb-3 mt-4 text-white">
      <h2>
        <%= episode.episode_number %>.
        <%= episode.name %>
      </h2>
      <div class="episode-box">
        <p id="episodeinfo"><%= sanitize episode.description %></p>
        <%= check_box_tag 'no', id:"check_box" %>
      </div>
    </div>
  <% end %>
</div>
