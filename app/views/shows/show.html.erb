<div class="container">
  <div class="showinfo">
    <div class="row">
      <div class="d-flex align-items-center py-3 text-justify">
        <div class="col-md-6">
          <img src="https://images2.minutemediacdn.com/image/upload/c_crop,h_358,w_640,x_0,y_29/f_auto,q_auto,w_1100/v1554990347/shape/mentalfloss/breakhed.jpg" alt="" class="w-100 rounded">
        </div>
        <div class="col-md-6">
          <h1><%= @show.name %></h1>
            <p class="hover-3-rating small text-uppercase mb-0"> <%= '⭐' * (@show.rating.round / 2) %> </p>
            <p><%= @show.summary %></p>
            <p>Seasons: <%= @show.number_of_seasons %></p>
            <%= link_to 'Add to my shows', show_path(@show), class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>

  <% count = 1 %>
  <% @show.number_of_seasons.times do %>
    <div class="container border rounded p-3 mb-3 mt-4 text-white text-justify">
      <p><strong>Season <%= count %></strong></p>
      <p><small><%= @show.summary %></small></p>
      <p><%= link_to 'Details', show_path(@show, season: count), class: "btn btn-success" %></p>
    </div>
      <% count += 1 %>
  <% end %>
</div>
