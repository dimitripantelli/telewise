<div id="search-result">
  <% @shows.each do |show| %>
    <a href="<%= show_path(show) %>">
      <div class="col-md-4">
        <%= image_tag("#{show.name.gsub(/\s+/, "")}.jpg") %>
      </div>
      <h3><span><%= show.name %></span></h3>
      <p><%= strip_tags show.summary %></p>
    </a>
  <% end %>
</div>


